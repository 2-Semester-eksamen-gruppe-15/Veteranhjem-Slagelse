---
const { title, subtitle, imgSrc, imgAlt = "" } = Astro.props;
---

<h1>{title}</h1>
<p class="subtitle">{subtitle}</p>

<section class="grid_section">
  <div class="grid_text">
    <slot />
  </div>

  <div class="grid_img">
    <img src={imgSrc} alt={imgAlt} />
  </div>
</section>

<style>
  h1 {
    color: var(--rolig);
    font: var(--header1);
    text-align: center;
  }

  .subtitle {
    font: var(--subtitle);
    text-align: center;
    margin-bottom: 2rem;
    margin-top: -2rem;
  }

  .grid_section {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 60px;
    padding: 40px 100px;
    margin: 0 auto;
    max-width: 1400px;
  }

  .grid_text p {
    margin-bottom: 1rem;
  }

  .grid_img img {
    width: 100%;
    height: auto;
    border-radius: 16px;
  }

  @media screen and (max-width: 900px) {
    .grid_section {
      grid-template-columns: 1fr;
      padding: 20px;
      gap: 20px;
    }

    h1,
    .subtitle {
      text-align: center;
      padding: 10px;
    }

    h1 {
      font: var(--header1Mobil);
    }
    .subtitle {
      font: var(--subtitleMobil);
      margin-bottom: 0;
    }
    p {
      font: var(--bodyMobil);
    }
  }
</style>
