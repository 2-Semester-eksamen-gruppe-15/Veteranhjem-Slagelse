---
const { title, img, imgAlt } = Astro.props;
---

<div class="grid">
  <div class="image">
    <img src={img} alt={imgAlt} />
  </div>
  <div class="text">
    <h2>{title}</h2>
    <slot />
  </div>
</div>

<style>
  .grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 75px;
    padding: 40px;
    padding-inline: 100px;
    background-color: var(--gylden20);
    background-image: url("../watermark/VANDMÃ†RKE-H.png");
    background-repeat: no-repeat;
    background-position: 120% 50%;
    background-size: 45%;
    align-items: center;
  }

  .image img {
    width: 85%;
    height: auto;
    border-radius: 30px;
    margin-top: 40px;
  }

  h2 {
    color: var(--rolig);
  }

  @media screen and (max-width: 900px) {
    .grid {
      grid-template-columns: 1fr;
      gap: 20px;
      padding: 20px;
      padding-inline: 20px;
      background-position: -90% -5%;
      background-size: 130%;
    }

    .image {
      order: 2;
    }
    h2 {
      text-align: center;
    }

    .text {
      order: 1;
    }
  }
</style>
