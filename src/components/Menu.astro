---
import Button from "./Button.astro";
---

<div class="navigation">
  <div class="logo">
    <a href="/">
      <img src="../logo/SLAGELSE-LOGO-G.png" alt="Logo" />
    </a>
  </div>
  <nav>
    <ul class="menu">
      <li><a href="/aktiviteter">Aktiviteter & Tilbud</a></li>
      <li><a href="/kontakt">Kontakt</a></li>
      <div class="buttons">
        <Button text="stÃ¸t" link="/stoet" textColor="black" buttonColor="var(--gylden)" />
        <Button text="bliv frivillig" link="/frivillig" textColor="white" buttonColor="var(--skov)" />
      </div>
    </ul>
    <div class="burger">
      <div class="line"></div>
      <div class="line"></div>
      <div class="line"></div>
    </div>
  </nav>
</div>

<style>
  .buttons {
    display: flex;
    gap: 40px;
  }
  .navigation {
    position: sticky;
    top: 0;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-inline: 40px;
    background-color: white;
    z-index: 100;
  }

  .logo img {
    width: 176px;
    background-color: white;
    padding: 22px;
    border-radius: 50%;
    margin-bottom: -70px;
    position: relative;
    z-index: 100;
  }

  nav {
    display: flex;
    align-items: center;
  }

  .menu {
    display: flex;
    list-style: none;
    margin: 0;
    padding: 0;
    transition: transform 0.5s ease-in-out;
    align-items: center;
  }

  .menu li {
    margin-right: 40px;
  }

  .menu a {
    display: block;
    padding: 10px;
    color: black;
    text-decoration: none;
    transition: 0.2s;
    text-align: center;
    font: var(--body);
  }

  .menu a:hover {
    color: var(--skov);
  }

  .burger {
    width: 30px;
    height: 20px;
    cursor: pointer;
    transition: transform 0.5s ease;
    z-index: 2;
  }

  .burger .line {
    width: 100%;
    height: 3px;
    background-color: black;
    margin-bottom: 5px;
    transition: 0.2s linear;
  }

  .burger {
    display: none;
  }

  @media screen and (max-width: 900px) {
    .navigation {
      padding-inline: 20px;
      padding-top: 10px;
      padding-bottom: 10px;
    }

    .logo img {
      width: 88px;
      padding: 11px;
      margin-bottom: -50px;
    }
    .menu {
      display: block;
      background-color: white;
      position: absolute;
      top: 50px;
      left: 0;
      width: 100%;
      z-index: 1;
      transform: translateY(-210%);
    }

    .burger {
      display: block;
    }

    .burger.active .line:nth-child(1) {
      transform: rotate(45deg) translate(6px, 6px);
      transition: 0.2s linear;
    }

    .burger.active .line:nth-child(2) {
      opacity: 0;
      transition: 0.15s linear;
    }

    .burger.active .line:nth-child(3) {
      transform: rotate(-45deg) translate(5px, -5px);
      transition: 0.2s linear;
    }

    nav.active .menu {
      transform: translateY(0%);
    }

    nav .menu li {
      margin: 10px 20px;
    }

    nav.active .menu li {
      margin: 10px 20px;
    }

    .buttons {
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 20px;
      margin-top: 20px;
      margin-bottom: 20px;
    }
  }
</style>

<script>
  const burger = document.querySelector(".burger");
  const nav = document.querySelector("nav");
  const menu = document.querySelector(".menu");

  if (burger) {
    burger.addEventListener("click", burgerClick);
  }
  function burgerClick() {
    if (burger) {
      burger.classList.toggle("active");
    }
    if (nav) {
      nav.classList.toggle("active");
    }
  }
</script>
